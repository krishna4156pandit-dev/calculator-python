# Simple Calculator in Python

def add(x, y):
    return x + y

def subtract(x, y):
    return x - y

def multiply(x, y):
    return x * y

def divide(x, y):
    if y == 0:
        return "‚ùå Error! Division by zero."
    return x / y

print("===== SIMPLE CALCULATOR =====")
print("Select operation:")
print("1. Addition (+)")
print("2. Subtraction (-)")
print("3. Multiplication (*)")
print("4. Division (/)")

while True:
    choice = input("\nEnter choice (1/2/3/4) or 'q' to quit: ")

    if choice.lower() == 'q':
        print("üëã Exiting Calculator. Goodbye!")
        break

    if choice in ['1', '2', '3', '4']:
        try:
            num1 = float(input("Enter first number: "))
            num2 = float(input("Enter second number: "))

            if choice == '1':
                print(f"‚úÖ Result: {num1} + {num2} = {add(num1, num2)}")
            elif choice == '2':
                print(f"‚úÖ Result: {num1} - {num2} = {subtract(num1, num2)}")
            elif choice == '3':
                print(f"‚úÖ Result: {num1} * {num2} = {multiply(num1, num2)}")
            elif choice == '4':
                print(f"‚úÖ Result: {num1} / {num2} = {divide(num1, num2)}")

        except ValueError:
            print("‚ùå Invalid input! Please enter numbers only.")
    else:
        print("‚ùå Invalid choice! Please select from 1, 2, 3, 4, or 'q'.")